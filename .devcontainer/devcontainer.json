  // VS Code è‡ªå®šä¹‰è®¾ç½®
  "customizations": {
    "vscode": {
      // æ¨èçš„æ‰©å±•
      "extensions": [
        // JSON æ”¯æŒ
        "ZainChen.json",

        // SQLite æ”¯æŒ
